<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="teo_product_homepage" pattern="/hello/{name}">
        <default key="_controller">TeoProductBundle:Default:index</default>
    </route>

    <route id="teo_product_download" pattern="/product/download/{id}">
        <default key="_controller">TeoProductBundle:Default:download</default>
    </route>
</routes>
