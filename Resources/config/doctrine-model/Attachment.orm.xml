<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <mapped-superclass name="Teo\ProductBundle\Model\Attachment">
        <field name="path" type="string" column="path" length="255"/>
        <field name="title" type="string" column="title" length="255" nullable="true"/>
        <field name="position" type="integer" column="position" nullable="true"/>
    </mapped-superclass>

</doctrine-mapping>